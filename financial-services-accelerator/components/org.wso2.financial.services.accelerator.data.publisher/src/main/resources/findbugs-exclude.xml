<FindBugsFilter>
    <!--Java Executor Services return a Future object when submitting the executor services. Since we are expecting
     the publisherExecutorService.submit() of EventQueue class to run asynchronously and we are not doing anything with
     the returned Future object the following bug pattern is excluded.-->
    <Match>
        <Class name="org.wso2.financial.services.accelerator.data.publisher.EventQueue"/>
        <Bug pattern="RV_RETURN_VALUE_IGNORED_BAD_PRACTICE"/>
    </Match>
    <Match>
        <Class name="org.wso2.financial.services.accelerator.data.publisher.EventQueue"/>
        <Bug pattern="CRLF_INJECTION_LOGS"/>
    </Match>
    <Match>
        <Class name="org.wso2.financial.services.accelerator.data.publisher.DataPublisherPool"/>
        <Bug pattern="CRLF_INJECTION_LOGS"/>
    </Match>
    <Match>
        <Class name="org.wso2.financial.services.accelerator.data.publisher.FinancialServicesThriftDataPublisher"/>
        <Bug pattern="CRLF_INJECTION_LOGS"/>
    </Match>
    <Match>
        <Class name="org.wso2.financial.services.accelerator.data.publisher.thrift.publisher.EventQueue"/>
        <Bug pattern="CRLF_INJECTION_LOGS"/>
    </Match>
    <Match>
        <Class name="org.wso2.financial.services.accelerator.data.publisher.thrift.publisher.EventQueue"/>
        <Bug pattern="CRLF_INJECTION_LOGS"/>
    </Match>
    <Match>
        <Class name="org.wso2.financial.services.accelerator.data.publisher.thrift.publisher.ParallelQueueWorker"/>
        <Bug pattern="CRLF_INJECTION_LOGS"/>
    </Match>
    <Match>
        <Class name="org.wso2.financial.services.accelerator.data.publisher.thrift.publisher.ThriftClient"/>
        <Bug pattern="CRLF_INJECTION_LOGS"/>
    </Match>
</FindBugsFilter>
