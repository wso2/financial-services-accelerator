<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>WSO2 Financial Services - Consent API</display-name>
  <description>WSO2 Financial Services - Consent API</description>

  <listener>
    <listener-class>org.wso2.financial.services.accelerator.consent.mgt.api.endpoint.utils.DatabaseInitializer</listener-class>
  </listener>

  <servlet>
    <servlet-name>ConsentAPIJAXServlet</servlet-name>
    <servlet-class>
      org.apache.cxf.jaxrs.servlet.CXFNonSpringJaxrsServlet
    </servlet-class>
    <init-param>
      <param-name>service-list-stylesheet</param-name>
      <param-value>servicelist.css</param-value>
    </init-param>
    <init-param>
      <param-name>jersey.config.server.provider.classnames</param-name>
      <param-value>org.glassfish.jersey.media.multipart.MultiPartFeature,
        org.wso2.financial.services.accelerator.consent.mgt.api.endpoint.mappers.exceptions.ConstraintViolationExceptionMapper</param-value>
    </init-param>
    <init-param>
      <param-name>jaxrs.providers</param-name>
      <param-value>com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider,org.wso2.financial.services.accelerator.consent.mgt.api.endpoint.mappers.exceptions.ConstraintViolationExceptionMapper,
        org.wso2.financial.services.accelerator.consent.mgt.api.endpoint.mappers.exceptions.MismatchedInputExceptionMapper,
        org.wso2.financial.services.accelerator.consent.mgt.api.endpoint.mappers.exceptions.JsonParseExceptionMapper
      </param-value>
    </init-param>
    <init-param>
      <param-name>jaxrs.features</param-name>
      <param-value>
        org.apache.cxf.validation.BeanValidationFeature
      </param-value>
    </init-param>
    <init-param>
      <param-name>jaxrs.serviceClasses</param-name>
      <param-value>
        org.wso2.financial.services.accelerator.consent.mgt.api.endpoint.api.ConsentsApi
      </param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>ConsentAPIJAXServlet</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

  <resource-ref>
    <description>Database Connection for WSO2FS</description>
    <res-ref-name>jdbc/WSO2FS_DB</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>



